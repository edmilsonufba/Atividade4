public static void GerarAnimal() {
		// TODO Auto-generated method stub
		Random gerador = new Random();
		int aleatorio = gerador.nextInt(7)+1;
		{
	     
	switch (aleatorio){
	    case 1 :
	    	System.out.println("O animal criado é um mamifero \n");
	    	 Mamifero novo_mamifero = new Mamifero();
		break;        
	    case 2:
	    	System.out.println ("O animal gerado é um Peixe \n");
	    	Peixes novo_peixe = new Peixes();
	    break;
	    case 3:
	    	System.out.println ("O animal gerado é uma ave \n");
	    	Aves novo_ave = new Aves();
	     	break; 
	    case 4 :
	    	System.out.println("O animal criado é uma arara \n");
	    	 Ararra nova_ararar   = new Ararra();
		break;
	    case 5 :
	    	System.out.println("O animal criado é um cachorro \n");
	    	Cachorro novo_cao = new Cachorro();
		break;
	    case 6 :
	    	System.out.println("O animal criado é um tubarao \n");
	    	 Tubarao novo_tubarao = new Tubarao();
		break;
	    case 7 :
	    	System.out.println("O animal criado é um cachorro Pastor  \n");
	    	 Pastor novo_pastor = new Pastor();
		break;
	     }
	     }
	} 

